@model IEnumerable<Saqia.Models.Area>

@{
    ViewData["Title"] = "قائمة المناطق";
}

<div class="container mt-4">
    <h2 class="mb-3">قائمة المناطق</h2>

    <a asp-action="Create" class="btn btn-success mb-3">+ إضافة منطقة جديدة</a>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>الاسم</th>
                <th>العمليات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">تعديل</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">تفاصيل</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
